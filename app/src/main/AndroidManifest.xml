<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notesstorageapp">

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_edit"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_edit"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesStorageApp">

        <!-- MainActivity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".AddNoteActivity" android:exported="false" />
        <activity android:name=".DeleteNoteActivity" android:exported="false" />
        <activity android:name=".NoteDetailActivity" android:exported="false" />

    </application>

</manifest>
